This program will display the players name, position and stats. 
*/
public class Player {
    // Declare instance variables
    private String name; // name of player
    private String position; // position of player
    private String team; // team of player
    private int attStats; // attempts of player
    private int ydsStats; // yards of player
    private int tdStats; // touchdowns of player
    private int weight; // weight of player
    private String height; // height of player
    private int age; // age of player
    private int number; // number of player
    
    
    // Declare the empty constructor
    public Player() {}
    
    // Declare Player constructor that accepts 3 parameters (name, position, stats)
    public Player(String nameIn, String positionIn, String teamIn,int attStatsIn,
        int ydsStatsIn, int tdStatsIn, int weightIn, String heightIn, int ageIn, int numberIn) {
        
        name = nameIn; // Here this will assign the value of nameIn to the name class instance variable(name of player)
        position = positionIn; // Here this will assign the value of positionIn to the position class instance variable)what position the player is)
        team = teamIn; // Here this will assign the value of teamIn to the team class instance variable(team stats)
        attStats = attStatsIn; // Here this will assign the value of attStatsIn to the attStats class instance variable
        ydsStats = ydsStatsIn; // Here this will assign the value of ydsStatsIn to the ydsStats class instance variable(yards)
        tdStats = tdStatsIn; //Here this will assign the value of tdStatsIn to the tdStats class instance variable(touchdowns)
        weight = weightIn; // Here this will assign the value of weightIn to the weight class instance variable(weight for players)
        height = heightIn; // Here this will assign the value of heightIn to the height class instance variable(height of player)
        age = ageIn; // Here this will assign the value of ageIn to the age class instance variable(age of player)
        number = numberIn; // HEre this will assign the value of numberIn to the number class instance variable( number of player)
    }
    
        public void setName(String nameIn) {
            this.name = nameIn; // creates the instance that is passed to the method.
        }
    
        public String getName() {
            return this.name; // creates the value of the instance variable name
        }
    
        public void setPosition(String positionIn) {
            this.position = positionIn; // position passed in method
        }
    
        public String getPosition() {
            return this.position; // gets the position in the method
        }
        
        public void setTeam(String teamIn) { 
            this.team = teamIn; // sets the variable for the team
        }
        
        public String getTeam() {
            return this.team; // gets the team variable
        }
    
        public void setAttStats(int attStatsIn) {
            this.attStats = attStatsIn; // sets stats variable
        }
    
        public int getAttStats() {
            return attStats; // gets stats variables
        }
    
        public void setYdsStats(int ydsStatsIn) {
            this.ydsStats = ydsStatsIn; // set instance variable ydsStats to ydsStats passed in the method
        }
    
        public int getYdsStats() {
            return ydsStats; // get the value of the instance variable ydsStats
        }
    
        public void setTdStats(int tdStatsIn) {
            this.tdStats = tdStatsIn; // set instance variable tdStats to tdStats passed in the method
        }
    
        public int getTdStats() {
            return tdStats; // get the value of the instance variable tdStats
        }
        
        public void setWeight(int weightIn) {
            this.weight = weightIn; // set instance variable weight to weight passed in the method
        }
        
        public int getWeight() {
            return weight; // gets the weight variable
        }
        
        public void setHeight(String heightIn) {
            this.height = heightIn; // sets the weight variable
        }
        
        public String getHeight() {
            return height; // get the value of the instance variable height
        }
        
        public void setAge(int ageIn) {
            this.age = ageIn; //sets the variable for age
        }
        
        public int getAge() {
            return age; // gets the age variable
        }
        
        public void setNumber(int numberIn) {
            this.number = numberIn; //sets the number variable
        }
        
        public int getNumber() {
            return number; // gets the nummber variable
        }
    
        public void displayPlayerInfo() {
            // Displays Player information to the console
            System.out.println("Name: " + getName());
            System.out.println("Position: " + getPosition());
            System.out.println("Team: " + getTeam());
            System.out.println("ATT: " + getAttStats());
            System.out.println("YDS: " + getYdsStats());
            System.out.println("TD: " + getTdStats());
            System.out.println("Weight: " + getWeight());
            System.out.println("Height: " + getHeight());
            System.out.println("Age: " + getAge());
            System.out.println("Number: " + getNumber());
        }
    }
